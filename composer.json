{
    "name": "peeyush-budhia/sanitizer",
    "description": "Sanitization library for PHP and the Laravel framework.",
    "keywords": [
        "peeyush-budhia",
        "laravel",
        "php",
        "sanitizer",
        "sanitization",
        "filter",
        "input sanitizer",
        "input sanitization",
        "input filter",
        "data sanitizer",
        "data sanitization",
        "data filter"
    ],
    "homepage": "https://github.com/peeyush-budhia/sanitizer",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Peeyush Budhia",
            "email": "peeyush.budhia@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/support": "^6.0|^7.0|^8.0",
        "illuminate/validation": "^6.0|^7.0|^8.0",
        "nesbot/carbon": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Peeyush\\Sanitizer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Peeyush\\Sanitizer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Peeyush\\Sanitizer\\SanitizerServiceProvider"
            ],
            "aliases": {
                "Sanitizer": "Peeyush\\Sanitizer\\SanitizerFacade"
            }
        }
    }
}
